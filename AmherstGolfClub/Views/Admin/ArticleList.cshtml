@model IEnumerable<AmherstGolfClub.Models.Articles>

@{
    ViewBag.Title = "ArticleList";
}
@if (Request.IsAuthenticated)
{
    <hr />
    <h2 class="text-center">Article Manager</h2>
    <hr />

    <table class="table table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SiteLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SiteLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditArticle", new { id = item.ArticlesID })
                </td>
            </tr>
        }

    </table>
    @Html.ActionLink("Admin Home", "Index")
    <hr />
}
else
{
    <div class="alert alert-danger">
        <p>You are not authorized to view this page.</p>
    </div>
}