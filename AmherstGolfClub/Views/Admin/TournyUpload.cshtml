
@{
    ViewBag.Title = "TournyUpload";
}
@if (Request.IsAuthenticated)
{
    <hr />
    <h2 class="text-center">Upload Tournament Results</h2>
    <hr />
    if (ViewBag.Uploaded == null)
    {
        using (Html.BeginForm("TournyUpload", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="container">
                <div class="form-horizontal">                    
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <input type="file" id="ResultFile"
                                   name="ResultFile" lass="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Upload File" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div> 
            <hr />
            <div class="container">
                @Html.ActionLink("Admin Home", "Index") | 
                @Html.ActionLink("Tourny List", "TournyList")
            </div>         
            <hr />
        }
    }
    else
    {
        <div class="alert alert-success">
            <h2>Upload Successful</h2>
        </div>
        <hr />
        <div class="container">
            @Html.ActionLink("Admin Home", "Index") |
            @Html.ActionLink("Tourny List", "TournyList") | 
            @Html.ActionLink("Upload Another Tournament", "TournyUpload")
        </div>        
    }
}
else
{
    <div class="alert alert-danger">
        <p>You are not authorized to view this page.</p>
    </div>
}
<hr />


