@model IEnumerable<AmherstGolfClub.Models.Articles>
@{
    ViewBag.Title = "About";
}

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <hr />
        <h2 class="text-center">The Course</h2>
        <hr />
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <p style="text-indent: 5em;">
                    @foreach (var item in Model.Where(item => item.ArticlesID == 3))
                    {
                        @Html.DisplayFor(modelItem => item.Description)

                    }
                </p>
            </div>
        </div>
        <hr />
        <h2 class="text-center">History</h2>
        <hr />
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <p style="text-indent: 5em;">
                    @foreach (var item in Model.Where(item => item.ArticlesID == 4))
                    {
                        @Html.DisplayFor(modelItem => item.Description)
                    }
                </p>
            </div>
        </div>
    </div>
</div>
<hr />
