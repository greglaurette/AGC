@model IEnumerable<AmherstGolfClub.Models.Articles>
@{
    ViewBag.Title = "Home";
}
<hr />
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/slide1.jpg" alt="First slide" class="carousel-pic">
        </div>
        <div class="item">
            <img src="~/images/slide2.jpg" alt="Second slide" class="carousel-pic">
        </div>
        <div class="item">
            <img src="~/images/slide3.jpg" alt="Fourth slide" class="carousel-pic">
        </div>
        <div class="item">
            <img src="~/images/slide4.jpg" alt="Fifth slide" class="carousel-pic">
        </div>
        <div class="item">
            <img src="~/images/slide5.jpg" alt="Sixth slide" class="carousel-pic">
        </div>
        <div class="item">
            <img src="~/images/slide6.jpg" alt="Seventh slide" class="carousel-pic">
        </div>
        <div class="item">
            <img src="~/images/slide7.jpg" alt="Eighth slide" class="carousel-pic">
        </div>
        <div class="item">
            <img src="~/images/slide8.jpg" alt="Nineth slide" class="carousel-pic">
        </div>
    </div>
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br /><hr />
<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            <div class="col-md-4">
                <h2>
                    @foreach (var item in Model.Where(item => item.ArticlesID == 1))
                    {
                        @Html.DisplayFor(modelItem => item.Description)

                    }
                </h2>



                <p>
                    @foreach (var item in Model.Where(item => item.ArticlesID == 2))
                    {
                        @Html.DisplayFor(modelItem => item.Description)

                    }</p>
        </div>
        <div class="col-md-8">
            <img src="~/images/nsMap.jpg" class="img-responsive" />
        </div>
    </div>
</div>
</div>

<br /><hr />