@model IEnumerable<AmherstGolfClub.Models.Product>
@{
    ViewBag.Title = "ProShop";
}
<hr />
<h2 class="text-center">Proshop Items</h2>
<hr />

<div class="container">
    @**@
    
    <div class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Products <span class="caret"></span> </a>
        <ul class="dropdown-menu">

            @* /////////////////////////////////////////////////////////////////////////////////////////////////////// *@
            @{ 
                IEnumerable<AmherstGolfClub.Models.Product> list = new AmherstGolfClub.DAL.GolfContext().Products;
                int count = 0;
                foreach (var item1 in list)
                {
                    if (item1.Quantity > 0 && item1.SubDepartment != "Food & Beverage")
                    {
                        count++;
                    }
                }


                string[] filter = new string[count];
                bool fix = true;
                foreach (var item3 in list)
                {
                    if (item3.Quantity > 0 && item3.SubDepartment != "Food & Beverage")
                    {
                        for (int row = 0; row <= count; row++)
                        {

                            for (int cut = 0; cut <= row; cut++)
                            {
                                if(filter[cut] == item3.ItemCategory)
                                {
                                    fix = false;
                                }
                            }
                            if (fix == true)
                            {
                                filter[row] = item3.ItemCategory;
                            }
                            else
                            {
                                filter[row] = null;
                            }
                        }



                    }


                }


                bool newItem = true;//control variable 
                foreach (var item in list)
                {
                    if (item.Quantity > 0 && item.SubDepartment != "Food & Beverage")
                    {
                        for (int row = 0; row <= filter.Length; row++)
                        {
                            if (newItem == true)
                            {
                                if (item.ItemCategory != filter[row])
                                {

                                    newItem = true;
                                }
                                if (item.ItemCategory == filter[row])
                                {
                                    newItem = false;
                                }
                            }
                        }
                        if (newItem == true)
                        {
                          < li > @Html.ActionLink(item.ItemCategory, "Index", new { name = item.ItemCategory }) </ li >
                            }
                        }

                    }
                <li>@Html.ActionLink("All categories", "Index")</li>

                    
                }
               @*////////////////////////////////////////////////////////////////////////////////////////////////////////////////////  *@
        </ul>
    </div>     
    <div class="form-inline">
        <div class="form-group">
            
            <div class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Filter <span class="caret"></span> </a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Low-To-High", "Index", new { sortOrder = ViewBag.PriceSortParm, name = ViewBag.FilterTest })</li>
                    <li>@Html.ActionLink("High-To-Low", "Index", new { sortOrder = ViewBag.LowPriceSortParm, name = ViewBag.FilterTest })</li>
                    


                </ul>
            </div>
        </div>
    </div>
    @**@
    
        @{ 
            
            foreach (var item in Model)
            {
                if (item.Quantity > 0 && item.SubDepartment != "Food & Beverage")
                {
                    if (item.ItemCategory == ViewBag.FilterTest || ViewBag.FilterTest == null) {
                <div class="col-md-4 center-block" style="margin-bottom:1em">
                    <div class="thumbnail">
                        <h5 class="text-center"><strong>@Html.DisplayFor(c => item.Name)</strong></h5>
                        @*forproduction*@
                        @*<img class="img-responsive" src="~/{@item.Name}.jpg" alt="~/android-chrome-96x96.png" />*@
                        @*fortesting*@
                        <img class="img-responsive" src="~/android-chrome-96x96.png" alt="@item.Name" />
                        <p class="text-center">$@Html.DisplayFor(c => item.Price)</p>

                    </div>
                </div>
                        }
                    }
                }
            }
</div>

